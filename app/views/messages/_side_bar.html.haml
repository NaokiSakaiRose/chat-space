.Side-bar
  .Side-bar__user-name
    .top-items
      .top-items__name 
        = current_user.username
      .top-items__icons
        = link_to new_group_path do
          = icon('fa', 'edit',class: 'icon')
        %span<>
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog',class: 'icon')
        %span<>
  .Side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
